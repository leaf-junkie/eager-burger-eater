<h1>Eager Burger Eater</h1>

<div>
    <h2 id="orderUp">Order's up!</h2>
</div>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<div>
    <h2 id="devoured">Devoured</h2>
</div>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>

<div id="addABurger">
    <h2>Add a burger</h2>
</div>

<form class="create-form">

    <div class="form-group">
        <input type="text" id="ca" name="name" placeholder="What would you like to eat?">
    </div>

